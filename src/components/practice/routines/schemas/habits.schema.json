{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version","habits"],
  "properties": {
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+$" },
    "habits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","name","scope","archived"],
        "properties": {
          "id": { "type": "string", "pattern": "^h-[A-Za-z0-9_-]+$" },
          "name": { "type": "string", "minLength": 1 },
          "scope": { "enum": ["day","week","month","year"] },
          "archived": { "type": "boolean" },
          "sort": { "type": "number" }
        },
        "additionalProperties": false
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}